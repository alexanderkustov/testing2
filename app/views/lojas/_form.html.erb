<%= semantic_form_for @loja do |f| %>
  <%= f.inputs do%>
  <%= f.input :nome %> 
  <%= f.input :morada %> 
  <%= f.input :detalhes, :input_html => { :class => 'autogrow', :rows => 2, :cols => 20 } %>
  <%= f.input :latitude, :label => "Lat" %> <%= f.input :longitude, :label => "Lng" %> 
  <%= f.input :gmaps, :input_html => { :disabled => true }, :label => "" %> 
<% end %>

<%= f.actions do %>
   <%= f.action :submit, :as => :button, :label => "Criar Loja"  %>
<% end %>
   
<%= f.fields_for :contactos do |builder| %>
  <%= render 'contacto_fields', f: builder %>
  <%= link_to_add_fields "Adicionar Contacto", f, :contactos %>
<% end %>

<%= render 'jsmap' %>


<% end %>