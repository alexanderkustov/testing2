<table>
  <tr>
    <th>Detalhes</th>
    <th>Gmaps</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Morada</th>
    <th>Nome</th>
    <th>Desporto</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @local_desportivos.each do |local_desportivo| %>
  <tr>
    <td><%= local_desportivo.detalhes %></td>
    <td><%= local_desportivo.gmaps %></td>
    <td><%= local_desportivo.latitude %></td>
    <td><%= local_desportivo.longitude %></td>
    <td><%= local_desportivo.morada %></td>
    <td><%= local_desportivo.nome %></td>
    <td><%= local_desportivo.desporto %></td>
    <td><%= link_to 'Show', local_desportivo %></td>
    <td><%= link_to 'Edit', edit_local_desportivo_path(local_desportivo) %></td>
    <td><%= link_to 'Destroy', local_desportivo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>